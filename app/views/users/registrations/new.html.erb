<%= content_for :title, 'Global Edutech Trading & Consultancy | Student Registration' %>
<section id="about">
  <div class="container">
    <div class="page-header about-header"><p class="lead about-title">New User Registration</p></div>


      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="well">

              
            

                <h2>Register &amp; Proceed to Online Application</h2>

                <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  

                  
                    <%= f.text_field :firstname, label: "First Name", required: true, autofocus: true %>
                    <%= f.text_field :lastname, label: "Last Name", required: true, autofocus: true %>
                    <%= f.email_field :email, required: true, autofocus: true %>
                    <%= f.password_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                    <%= f.password_field :password_confirmation, required: true %>
                    <%= f.submit "Sign up" %>
                 
                <% end %>

                <%= render "devise/shared/links" %>



                    
                  
            
          </div>
        </div>
        
      </div>

  </div>
</section>